{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "TessViewer Setting Schema",
	"type": "object",
	"properties": {
		"window": {
			"description": "ウィンドウに関連する設定",
			"type": "object",
			"properties": {
				"fullscreen": {
					"type": "boolean"
				},
				"resolution": {
					"description": "画面解像度",
					"type": "object",
					"properties": {
						"width": {
							"type": "integer",
							"minimum": 100,
							"maximum": 1920,
							"default": 960
						},
						"height": {
							"type": "integer",
							"minimum": 100,
							"maximum": 1080,
							"default": 800
						}
					}
				},
				"vsync": {
					"description": "垂直同期",
					"type": "boolean",
					"default": true
				},
				"background_color": {
					"$ref": "#color_value",
					"default": "#808080ff"
				},
				"bit": {
					"properties": {
						"red": {
							"type": "integer",
							"default": 8
						},
						"green": {
							"type": "integer",
							"default": 8
						},
						"blue": {
							"type": "integer",
							"default": 8
						},
						"alpha": {
							"type": "integer",
							"default": 8
						},
						"depth": {
							"type": "integer",
							"default": 24
						},
						"stencil": {
							"type": "integer",
							"default": 8
						}
					}
				},
				"debug_level": {
					"type": "integer",
					"maximum": 4,
					"minimum": 0,
					"default": 0
				}
			}
		},
		"graphics": {
			"description": "グラフィックに関する設定",
			"type": "object",
			"properties": {
				"camera": {
					"properties": {
						"position": {
							"$ref": "#vec3"
						},
						"angle": {
							"$ref": "#vec3"
						},
						"quaternion": {
							"type": "array",
							"maxItems": 4,
							"minItems": 4,
							"items": {
								"type": "number"
							}
						},
						"fov": {
							"description": "視野の広さ",
							"type": "number",
							"minimum": 10.0,
							"maximum": 179.0,
							"default": 60.0
						},
						"light": {
							"description": "常にカメラ側から照らすライト",
							"properties": {
								"color": {
									"$ref": "#color_value"
								},
								"direction": {
									"$ref": "#vec3"
								}
							}
						}
					}
				},
				"model": {
					"description": "コマンドライン引数によるモデルの指定がない場合読み込まれるモデル",
					"format": "uri-reference",
					"default": "data/model/cube.sdmj"
				},
				"osd": {
					"description": "OpenSubdivに関する設定",
					"type": "object",
					"properties": {
						"patch": {
							"properties": {
								"type": {
									"description": "パッチタイプ",
									"enum": [
										"REGULAR",
										"GREGORY_BASIS"
									],
									"default": "REGULAR"
								},
								"level": {
									"description": "パッチ係数",
									"type": "integer",
									"minimum": 0,
									"maximum": 10,
									"default": 2
								}
							}
						},
						"tess_level": {
							"description": "テッセレーション係数",
							"type": "integer",
							"minimum": 0,
							"maximum": 10,
							"default": 2
						}
					}
				},
				"shader": {
					"properties": {}
				}
			}
		},
		"ui": {
			"description": "インターフェイスに関する設定",
			"type": "object",
			"properties": {
				"font": {
					"description": "フォント関連設定",
					"type": "object",
					"properties": {
						"file": {
							"description": "フォントファイル",
							"type": "string",
							"format": "uri-reference",
							"default": "data/font/ipaexg.ttf"
						},
						"size": {
							"description": "フォントサイズ",
							"type": "integer",
							"minimum": 5,
							"maximum": 32,
							"default": 12
						},
						"color": {
							"description": "フォントカラー",
							"type": "object",
							"properties": {
								"primary": {
									"$ref": "#color_value",
									"default": "#f0f0f0"
								},
								"secondary": {
									"$ref": "#color_value",
									"default": "#0000000f"
								}
							},
							"dependencies": {
								"second": [
									"primary"
								]
							}
						}
					}
				}
			}
		},
		"control": {}
	},
	"definitions": {
		"vec3": {
			"$id": "vec3",
			"type": "array",
			"maxItems": 3,
			"minItems": 3,
			"items": {
				"type": "number"
			}
		},
		"color": {
			"definitions": {
				"value": {
					"$id": "color_value",
					"description": "16進数で色RGBAを指定する。最初のR値だけ指定するとGB値も同じ値になる。アルファ値はしていしない限りff",
					"type": "string",
					"minLength": 3,
					"maxLength": 9,
					"default": "#ffffffff",
					"pattern": "^#([a-fA-F0-9]{2,8})$",
					"examples": [
						"#ff",
						"#ffffff",
						"#ffFFffFF"
					]
				}
			}
		}
	}
}